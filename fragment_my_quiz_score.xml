<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sidenav.MyQuizScoreFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/banner_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/iv_banner_ads"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/maxpro" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@id/banner_section"
        android:id="@+id/home_next_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-condensed"
        android:padding="6dp"
        android:text="My Quiz Score"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:id="@+id/match_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_next_match"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="#eee"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:text="Select Match No"
            android:layout_marginStart="6dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimaryDark"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/my_team_spinner"
                android:padding="8dp"
                />
        </RelativeLayout>


    </RelativeLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/match_winner"
    android:text="Check Score"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:background="@android:color/holo_red_dark"
    android:textColor="@android:color/white"
    android:layout_margin="28sp"
    android:id="@+id/checkScore"

    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkScore"

        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        >

        <android.support.v7.widget.CardView
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="#2956A3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="25dp">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 0"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="8dp"
                android:id="@+id/Showscore"

                />


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</RelativeLayout>